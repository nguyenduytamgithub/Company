{{#extend "css"}}
	<link href="/css/4-col-portfolio.css" rel="stylesheet">
{{/extend}}

{{> userheader}}
<div class="container-fluid">
	<div class="row">
		{{#each roses}}
		<div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
			<div class="card h-100">
				<div class="imageAndText">
					<div style="cursor:pointer;">
						<img onclick="roseClicked('{{this.id}}')" style="position:relative;" class="card-img-top" src="/images/rose/{{this.imgsrc}}" height="220px" width="100%">
					</div>
					<div class="tag col">
						<div class="col-xs-10">
							{{this.name}}
						</div>
						<div class="col-xs-2" align="right">
							<span onclick="roseLoved('{{this.id}}')" class="love glyphicon glyphicon-heart" style="cursor:pointer;"></span>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
<!-- /.row -->

<!-- Pagination -->
	<div class="row" align="center">
		<ul class="pagination">
			<li class="page-item">
				<a class="page-link" href="#" aria-label="Previous">
				<span aria-hidden="true">&laquo;</span>
				<span class="sr-only">Previous</span>
				</a>
			</li>
			<li class="page-item">
				<a class="page-link" href="#">1</a>
			</li>
			<li class="page-item">
				<a class="page-link" href="#">2</a>
			</li>
			<li class="page-item">
				<a class="page-link" href="#">3</a>
			</li>
			<li class="page-item">
				<a class="page-link" href="#" aria-label="Next">
				<span aria-hidden="true">&raquo;</span>
				<span class="sr-only">Next</span>
				</a>
			</li>
		</ul>
	</div>
</div>

{{> footer}}

{{#extend "js"}}
	<script src="/js/jquery-3.2.1.min.js"></script>
	<script>
		$("card").css("height", "250px");
		function roseClicked(roseId) {
			alert("Clicked on " + roseId);
		}
		
		function roseLoved(roseId) {
			alert("Loved " + roseId);
		}
	</script>
{{/extend}}
