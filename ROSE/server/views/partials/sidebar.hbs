{{#extend "css-partial"}}
	<link href="/css/nav/bootstrap.min.css" rel="stylesheet">
	<!-- MetisMenu CSS -->
    <link href="/css/nav/metisMenu.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/nav/sb-admin-2.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="/css/nav/font-awesome.min.css" rel="stylesheet" type="text/css">
	<link href="/css/nav/custom.css" rel="stylesheet" type="text/css">
{{/extend}}

<nav id="sidebar" class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom:0;">
	<div class="navbar-header" id="header-nav">
		<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
		</button>
		<div class="center banner h1" align="center">
			{{name}}
		</div>
	</div>
	<!-- /.navbar-header -->

	<ul class="nav navbar-top-links navbar-right">
		{{#ifIntersect roles "[manager]"}}
			<li class="dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#">
					<i class="fa fa-envelope fa-fw"></i> <i class="fa fa-caret-down"></i>
				</a>
				<ul class="dropdown-menu dropdown-messages">
					{{#each messages}}
						<li>
							<a href='{{link}}'>
								<div>
									<strong>[{{this.time}}]</strong>
								</div>
								<div>{{this.content}}</div>
							</a>
						</li>
						<li class="divider"></li>
					{{/each}}
					<li>
						<a class="text-center" href="#">
							<strong>Đọc tất cả tin nhắn</strong>
							<i class="fa fa-angle-right"></i>
						</a>
					</li>
				</ul>
				<!-- /.dropdown-messages -->
			</li>
		{{/ifIntersect}}
		<!-- /.dropdown -->
		<li class="dropdown">
			<a class="dropdown-toggle" data-toggle="dropdown" href="#">
				<i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
			</a>
			<ul class="dropdown-menu dropdown-user">
				<li><a href="#"><i class="fa fa-user fa-fw"></i> Thông tin tài khoản</a>
				</li>
				<li><a href="#"><i class="fa fa-gear fa-fw"></i> Đổi mật khẩu</a>
				</li>
				<li class="divider"></li>
				<li><a href="/admin/logout"><i class="fa fa-sign-out fa-fw"></i> Đăng xuất</a>
				</li>
			</ul>
			<!-- /.dropdown-user -->
		</li>
		<!-- /.dropdown -->
	</ul>
	<!-- /.navbar-top-links -->

	<div id='nav' class="navbar-default sidebar" role="navigation">
		<div class="sidebar-nav navbar-collapse">
			<ul class="nav" id="side-menu">
				<li class="sidebar-search">
					<div class="input-group custom-search-form">
						<input type="text" class="form-control" placeholder="Nhập thông tin cần tìm...">
						<span class="input-group-btn">
						<button class="btn btn-default" type="button">
							<i class="fa fa-search"></i>
						</button>
					</span>
					</div>
					<!-- /input-group -->
				</li>
				{{#ifIntersect roles "[stech, tech]"}}
				<li>
					<a href="/admin/rose/add"><i class="fa fa-edit fa-fw"></i> Thêm hoa hồng</a>
				</li>
				{{/ifIntersect}}
				<li>
					<a href="/admin/rose/list"><i class="fa fa-table fa-fw"></i> Danh sách hoa hồng</a>
				</li>
				<li>
					<a href="/admin/rose/pend-list"><i class="fa fa-table fa-fw"></i> Danh sách hoa chờ duyệt</a>
				</li>
				{{#ifIntersect roles "[manager]"}}
					<li>
						<a href="/admin/area/detail/13D04ASW96"><i class="fa fa-table fa-fw"></i> Thông tin khu vực</a>
					</li>
				{{/ifIntersect}}
			</ul>
		</div>
		<!-- /.sidebar-collapse -->
	</div>
	<!-- /.navbar-static-side -->
</nav>

{{#extend "js-partial"}}
	<!-- jQuery -->
    <script src="/js/nav/jquery.min.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="/js/nav/bootstrap.min.js"></script>
	<!-- Metis Menu Plugin JavaScript -->
    <script src="/js/nav/metisMenu.min.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="/js/nav/sb-admin-2.js"></script>
	<script>
		function resizedWindow() {
			let width = $(window).width();
			if (width >= 768) {
				$('#nav').css('margin-top', '400px');
				$('#header-nav').css('height', '400px');
			} else {
				$('#nav').css('margin-top', '200px');
				$('#header-nav').css('height', '200px');
			}
		}
		resizedWindow();
		$(window).resize(resizedWindow);
		
		$('#header-nav').css('width', '100%');
		$('#header-nav').css('background-image', 'url(/images/admin-banner.jpg)');
		$('#header-nav').css('background-size', '100% 100%');
	</script>
{{/extend}}
