{{#extend "js-partial"}}
	<script>
		$(function() {
			let isHidden = true;
			$('#showMapBtn').click(function() {
				if (isHidden) {
					$('#showMapBtn').text("Ẩn bản đồ");
					$('#map').show();
				} else {
					$('#showMapBtn').text("Hiển thị bản đồ");
					$('#map').hide();
				}
				isHidden = !isHidden;
			});
		});
	</script>
