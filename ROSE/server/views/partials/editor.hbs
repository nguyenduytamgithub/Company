{{#extend "css-partial"}}
{{/extend}}

<textarea ng-model="describe" name="editor" id="editor" style="resize:none;" placeholder="Bài viết miêu tả về giống hoa này"></textarea>

{{#extend "js-partial"}}
	<script src="/js/tinymce/tinymce.min.js"></script>
	<script src="/js/tinymce/jquery.tinymce.min.js"></script>
	<script>
		tinymce.init({
			selector:'#editor',
			height: {{height}},
			resize: false,
			branding: false,
			toolbar: 'underline bold italic sizeselect fontselect fontsizeselect | hr alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | insertfile undo redo | forecolor backcolor emoticons',
			fontsize_formats: "8pt 10pt 12pt 14pt 18pt 24pt 36pt",
			relative_urls: false,
			convert_urls: false,
			remove_script_host : false,
			plugins: 'print searchreplace image autolink link media table hr toc insertdatetime textcolor wordcount contextmenu colorpicker help',
			setup : function(ed) {
				ed.on('keydown', function(event) {
					if (event.keyCode == 9) { // tab pressed
						if (event.shiftKey) {
							ed.execCommand('Outdent');
						} else {
							ed.execCommand('Indent');
						}
						event.preventDefault();
						return false;
					}
				});
			}
		});
	</script>
{{/extend}}
